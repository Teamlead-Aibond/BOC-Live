    </style>
  </head>

  <body>

    <h2>Order Details - Aibond Store</h2>
    <div class="row d-flex justify-content-center">
      <div class="col-md-10">
        <div class="card p-3">
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12">
                  <h4>Customer: {{BasketInfo.CompanyName}}</h4>
                </div>
                <div class="col-md-12">
                  <h4>MRO#: MRO{{MROId}}</h4>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5 mb-3">
                  <table class="table mt-2 rounded table-bordered mb-0">
                    <thead class="thead-light">
                      <th colspan="2">
                        <h4 class="m-0">Billing Address</h4>
                      </th>
                    </thead>
                    <tbody>
                      <tr>
                        <td>
                          {{BasketInfo.CompanyName}}<br />
                          {{BillingAddress.StreetAddress}}
                          ,{{BillingAddress.City}}
                          ,
                          {{BillingAddress.CountryName}}
                          ,{{BillingAddress.StateName}}.-
                          {{BillingAddress.Zip}}
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="col-md-5">
                  <table class="table mt-2 table-bordered mb-0">
                    <thead class="thead-light">
                      <th colspan="2">
                        <h4 class="m-0">Shipping Address</h4>
                      </th>
                    </thead>
                    <tbody>
                      <tr>
                        <td>
                          {{BasketInfo.CompanyName}}<br />
                          {{ShippingAddress.StreetAddress}}
                          ,{{ShippingAddress.City}}
                          ,
                          {{ShippingAddress.CountryName}}
                          ,{{ShippingAddress.StateName}}.-
                          {{ShippingAddress.Zip}}
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="row mt-4">
                <div class="col-md-5">
                  <div class="card mb-4">
                    <div class="card-header c_header py-2">
                      <h4 class="m-0 ml-2">{{BasketItem.length}} items</h4>
                    </div>
                    {{#each BasketItem}}
                      <div class="card-body p-2">
                        <div class="row">
                          <div
                            class="col-md-3 d-flex align-items-center justify-content-center"
                          >
                            <img width="80" src="{{image}}" alt="{{PartNo}}" />
                          </div>
                          <div
                            class="col-md-6 d-flex flex-column justify-content-center"
                          >
                            <table>
                              <tbody>
                                <tr>APN:{{APNNo}} </tr>
                                <tr>Part #: {{PartNo}} </tr>
                              </tbody>
                            </table>
                            {{!-- <b
                                                    class="mb-2 ng-star-inserted"><strong>APN:{{APNNo}}</strong></b><br>
                                                <br />
                                                <b class="mb-0">Part #: {{PartNo}}</b> --}}
                          </div>
                          <div
                            class="col-md-3 d-flex flex-column justify-content-center"
                          >
                            <p class="text-start text-center m-0"><strong>
                                x
                                {{Quantity}}</strong>
                            </p>
                          </div>
                        </div>
                        <hr class="my-2" />
                      </div>
                    {{/each}}
                  </div>
                </div>
                {{!
                        </div> }}
                <div class="col-md-5">
                  <ul class="list-group mb-3 mt-0 bg-light">
                    {{! <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                        <h5 class="my-0">Delivery Cost</h5>
                                    </div>
                                    <h5 class="my-0">0</h5>
                                </li> }}
                    <li
                      class="list-group-item d-flex justify-content-between lh-condensed"
                    >
                      <div>
                        <h5 class="my-0">VAT</h5>
                      </div>
                      <h5 class="my-0">{{BasketInfo.CurrencySymbol}} 0</h5>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                      <h5 class="my-0">Total Amount</h5><strong>
                        <h5 class="my-0">{{BasketInfo.CurrencySymbol}}
                          {{BasketInfo.GrandTotal}}</h5>
                      </strong>
                    </li>
                    <li
                      class="list-group-item d-flex justify-content-between lh-condensed"
                    >
                      <div>
                        <h5 class="my-0 ng-star-inserted">Customer PO</h5>
                      </div>
                      <h5 class="ng-star-inserted">PO #: {{CustomerPONo}}</h5>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

</html>